# ===================================
# HEADSCALE CONFIGURATION
# ===================================

# URL of your Headscale instance
# Example: http://headscale:8080 (if running in same Docker network)
# Example: http://192.168.1.100:8080 (if running on another host)
HEADSCALE_URL=http://headscale:8080

# Headscale API Key (generate one with: headscale apikeys create)
# IMPORTANT: Keep this secret! Never commit the real key to git
HEADSCALE_API_KEY=your-api-key-here


# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Port on which the application will listen
APP_PORT=3000

# Node environment (development, production)
NODE_ENV=production

# Log level (error, warn, info, debug)
LOG_LEVEL=info


# ===================================
# SECURITY (FUTURE USE)
# ===================================

# Enable authentication (NOT YET IMPLEMENTED)
ENABLE_AUTH=false

# Session secret for cookie signing (change in production!)
# Generate with: openssl rand -base64 32
SESSION_SECRET=change-me-in-production-use-openssl-rand

# JWT secret for token signing (change in production!)
# Generate with: openssl rand -base64 32
JWT_SECRET=change-me-in-production-use-openssl-rand

# JWT expiry time
JWT_EXPIRY=7d


# ===================================
# TWO-FACTOR AUTHENTICATION (FUTURE USE)
# ===================================

# Enable TOTP (NOT YET IMPLEMENTED)
TOTP_ENABLED=false

# TOTP issuer name (shown in authenticator apps)
TOTP_ISSUER=Headscale-UI


# ===================================
# ADVANCED OPTIONS
# ===================================

# Rate limiting - max requests per window
RATE_LIMIT_MAX=100

# Rate limiting - time window in minutes
RATE_LIMIT_WINDOW=15

# Enable Docker fallback (NOT YET IMPLEMENTED - See docs/DOCKER_FALLBACK.md)
DOCKER_FALLBACK_ENABLED=false

# Docker container name (only needed if fallback enabled)
DOCKER_CONTAINER_NAME=headscale

# Headscale provider (api or docker)
HEADSCALE_PROVIDER=api
